<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            text-align: center;
        }

        /* Navbar */
        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            background: #162938;
            padding: 30px;
            display: flex;
            flex-direction: column; /* Stack elements */
            align-items: center;
            color: white;
            font-weight: bold;
            font-size: 20px;
            z-index: 1000;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .navbar h1 {
            margin: 0;
            font-size: 24px;
            letter-spacing: 1.2px;
            text-align: center;
        }

        .innernav {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 10px; /* Add spacing */
        }
        
         /* Sidebar */
         .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            right: -250px;
            background: #162938;
            padding-top: 80px;
            transition: 0.3s;
            color: white;
            box-shadow: -2px 0 5px rgba(0, 0, 0, 0.2);
            z-index: 1001;
        }

        .sidebar a {
            display: block;
            padding: 15px;
            text-decoration: none;
            color: white;
            font-size: 20px;
            transition: 0.3s;
        }

        .sidebar a:hover {
            background: #1e3a4c;
        }

        .close-btn {
            position: absolute;
            top: 10px;
            right: 20px;
            font-size: 30px;
            cursor: pointer;
        }

        .menu-icon {
            position: absolute;
            top: 15px;
            right: 20px;
            cursor: pointer;
            font-size: 30px;
        }
        .website-title {
            text-align: center;
            margin-top: 80px;
        }

        .website-title h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 7em;
            font-weight: bold;
            color: #162938;
        }

        .website-title p {
            font-family: 'Poppins', sans-serif;
            font-size: 2em;
            font-weight: bold;
            color: #162938;
        }

        /* Payment Container */
        .main-container {
            margin-top: 100px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
    

        .payment-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: white;
            width: 350px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        select, input, button {
            width: 100%;
            margin: 10px 0;
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        button {
            background-color: #162938;
            color: white;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: #1e3a4c;
        }

        .error {
            color: red;
            font-size: 14px;
        }
         /* Footer */
         footer {
            text-align: center;
            padding: 10px;
            background: #162938;
            color: white;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <h1>TATA INDIAN PREMIER LEAGUE - 2025</h1>
        <span class="menu-icon" onclick="openSidebar()">&#9776;</span>
    </div>
    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
        <span class="close-btn" onclick="closeSidebar()">×</span>
        <a href="./Home.html"target="_blank">Home</a>
        <a href="./Matches.html"target="_blank">Matches</a>
        <a href="./Matches.html"target="_blank">Teams</a>
        <a href="./"target="_blank">Profile</a>
    </div>
    <div class="website-title">
        <h1>IPL Arena</h1>
        <p><em>Your Gateway to the Ultimate Cricketing Experience!</em></p>   
    </div>

    <!-- Main Content -->
    <div class="main-container">
        <div class="payment-container">
            <h2>Payment Details</h2>
            <p>Total Amount: ₹<span id="amount"></span></p>
            <label for="payment-method">Select Payment Method:</label>
            <select id="payment-method" onchange="showPaymentFields()">
                <option value="">--Choose--</option>
                <option value="phonepe">PhonePe</option>
                <option value="paytm">Paytm</option>
                <option value="bank">Bank Transfer</option>
            </select>

            <div id="payment-fields"></div>

            <button onclick="validatePayment()">Pay Now</button>
            <p id="error-message" class="error"></p>
        </div>
    </div>
    <!-- Footer -->
    <footer>
        <p>© 2025 IPL Arena. All Rights Reserved.</p>
    </footer>


    <script>
        function openSidebar() {
            document.getElementById("sidebar").style.right = "0";
        }

        function closeSidebar() {
            document.getElementById("sidebar").style.right = "-250px";
        }
    </script>
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        let totalAmount = localStorage.getItem("totalAmount") || 0;
        document.getElementById("amount").innerText = totalAmount;
    });

    function showPaymentFields() {
        let method = document.getElementById("payment-method").value;
        let fieldsContainer = document.getElementById("payment-fields");
        fieldsContainer.innerHTML = "";

        if (method === "phonepe" || method === "paytm") {
            fieldsContainer.innerHTML = `
                <label for='upi'>Enter UPI ID:</label>
                <input type='text' id='upi' placeholder='example@ybl' required>
            `;
        } else if (method === "bank") {
            fieldsContainer.innerHTML = `
                <label for='acc'>Account Number:</label>
                <input type='text' id='acc' placeholder='12-digit account number' required>
                <label for='cvv'>CVV:</label>
                <input type='text' id='cvv' placeholder='3-digit CVV' required>
            `;
        }
    }

    async function validatePayment() {
        let method = document.getElementById("payment-method").value;
        let errorMessage = document.getElementById("error-message");
        errorMessage.innerText = "";

        if (!method) {
            errorMessage.innerText = "Please select a payment method.";
            return;
        }

        if (method === "phonepe" || method === "paytm") {
            let upi = document.getElementById("upi").value;
            let validUPI = method === "phonepe" ? /@ybl$/ : /@paytm$/;
            if (!validUPI.test(upi)) {
                errorMessage.innerText = "Invalid UPI ID. Must end with @ybl or @paytm.";
                return;
            }
        } else if (method === "bank") {
            let acc = document.getElementById("acc").value;
            let cvv = document.getElementById("cvv").value;
            if (!/^[0-9]{12}$/.test(acc)) {
                errorMessage.innerText = "Account number must be 12 digits.";
                return;
            }
            if (!/^[0-9]{3}$/.test(cvv)) {
                errorMessage.innerText = "CVV must be 3 digits.";
                return;
            }
        }

        let matchDetails = localStorage.getItem("matchDetails");
        
        if (!matchDetails) {
            alert("No match details found.");
            return;
        }

        try {
            const response = await fetch("/tickets", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ matchDetails })
            });

            if (response.ok) {
                alert("Payment Successful! Redirecting to your ticket...");
                window.location.href = "/tickets.html"; // Redirect to your ticket page
            } else {
                alert("Payment failed. Please try again.");
            }
        } catch (error) {
            console.error("Error:", error);
            alert("An error occurred while processing your payment.");
        }
    }
</script>

</body>
</html>
